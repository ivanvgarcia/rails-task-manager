
<div class="wrapper">
  <h1 class="title">Tasks</h1>
</div>


<div class="container">
  <div class="add-task">
    <%= link_to tasks_new_path, class: "btn is-block" do %>
      <i class="fas fa-tasks"> Add Task</i>
    <% end %>
  </div>
  <% if flash[:notice] %>
    <div class="notice">
        <div class="notice__message">
          <%= flash[:notice] %>
        </div>
    </div>
  <% end %>
  <div class="tasks-list">
    <% @tasks.each do |task| %>
      <div class="task">
            <%= link_to task_edit_path(task), 
                class: "edit" do %>
                <i class="fas fa-marker"></i>
            <% end %>
        
            <%= link_to task_path(task), 
                class: "delete",
                method: :delete, 
                data: { confirm: "Are you sure?"} do %>
              <i class="far fa-trash-alt"></i>
            <% end %>

          <div class="task__title">
          <% if task.completed == true %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
            <%= link_to task.title, task_path(task) %>
          </div>

          <div class="task__details">
            <%= task.details %>
          </div>
      </div>
    <% end %>
  </div>
</div>

